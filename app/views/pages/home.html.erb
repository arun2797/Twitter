<div class="rows">

	<div class="col-xs-3">
		
		<div class="panel panel-default">
  			<div class="panel-body">
  				INFO
			</div>
		</div>
		
		<div class="panel panel-default">
  			<div class="panel-body">
  				TRENDS
			</div>
		</div>

	</div>

	<div class="col-xs-6">
		<% for @p in @posts%>
		<div class="panel panel-default">
  			<div class="panel-body">
  				<% @name = User.find_by_id(@p.user_id) %>
   				<left> <b> <%= @name.email %> </b></left>
   				<hr style="height:1px;border:none;color:#333;background-color:#333;" />
  				<p><%= @p.content %></p>
			</div>
		</div>
		<% end %>
	</div>

	<div class="col-xs-3">
		<div class="panel panel-default">
  			<div class="panel-body">
  				ABOUT
			</div>
		</div>
	</div>

</div>


