<div class="rows">
	<div class="jumbotron">
		<%= current_user.email %>
	</div>
</div>




<div class="rows">

	<div class="col-xs-3">
		<div class="panel panel-default">
  			<div class="panel-body">
  				INFO
			</div>
		</div>
	</div>

	<div class="col-xs-6">


		<div class="panel panel-default">
  			<div class="panel-body">
  				<%= render '/components/posts_form' %>
			</div>
		</div>


		<div class="panel panel-default">
  			<div class="panel-body">
				<center> <b> Tweets by <%= current_user.email %> </b></center>
			</div>
		</div>



		<% for @p in @posts%>
		<div class="panel panel-default">
  			<div class="panel-body">
  				<p><%= @p.content %></p>
			</div>
		</div>
		<% end %>



	</div>

	<div class="col-xs-3">
		
		<div class="panel panel-default">
  			<div class="panel-body">
  				ABOUT
			</div>
		</div>
		
		<div class="panel panel-default">
  			<div class="panel-body">
  				TRENDS
			</div>
		
		</div>
	</div>

</div>


