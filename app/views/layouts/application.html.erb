<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render '/layouts/navbar' %>
    <div class="container">

      <b><span class="notice" style="font-size:25px"><%= notice %></span></b>
      <b><span class="alert"><%= alert %></span></b>

      <%= yield %>

    </div>
  </body>
</html>
